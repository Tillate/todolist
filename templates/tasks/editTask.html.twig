{% extends "layouts/base.html.twig" %}

{% block title %}Modifier une tâche{% endblock %}


{% block body %}
  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 5%">
        <h4>Modifier la tâche "{{ task.getName }}"</h4>
        <p></p>
      </div>
    </div>
    <form action="/task/{{ project.getId }}/saveEdit/{{task.getId}}" method="POST">
      <div class="row">
        <div class="column">
          <label for="name">Nom</label>
          <input class="u-full-width" type="text" id="name" name="name" value="{{ task.getName }}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="description">Description</label>
          <input class="u-full-width" type="text" id="description" name="description" value="{{ task.getDescription }}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="start_date">Date de début</label>
          <input class="u-full-width" type="text" id="start_date" name="start_date" placeholder="aaaa/mm/jj" value="{{ task.getStartDate|date("d M Y") }}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="end_date">Date de fin</label>
          <input class="u-full-width" type="text" id="end_date" name="end_date" placeholder="aaaa/mm/jj" value="{{ task.getEndDate|date("d M Y") }}">
        </div>
      </div>
     {# <div class="row">
        <div class="column">
          <label for="end_date">Utilisateurs</label>
            <select class="u-full-width" id="users" name="users">
            {% for user in users %}
                  <option value="{{ user.getId }}" selected>{{ user.getFirstName }} {{ user.getLastName }}</option>
            {% endfor %}
          </select>
        </div>
      </div> #}
      

      <a class="button button-primary" href="/project/{{project.getId}}/task">Annuler</a>
      <a href="/task/{{ project.getId }}/delete/{{ task.getId }}"  class="button button-primary">Supprimer</a>
      <input class="button-primary" type="submit" value="Enregistrer">
    </form>
  </div>
<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
{% endblock %}