{% extends "layouts/base.html.twig" %}

{% block title %}Liste des utilisateurs{% endblock %}


{% block body %}
  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 10%">
        <h4>Liste des utilisateurs</h4>
      </div>
    </div>
    <h5>
    <a href="user/add" class="button button-primary">Ajouter un utilisateur</a>
    </h5>
{% if users %}
    <div class="row">
      <div class="column">
        <table class="u-full-width">
          <thead>
            <tr>
              <th>Prénom</th>
              <th>Nom</th>
              <th>Email</th>
              <th>Modifier l'utilisateur</th>
              <th>Projets de l'utilisateur</th>
            </tr>
          </thead>

          <tbody>
{% for user in users %}
            <tr>
              <td>{{ user.getFirstName }}</td>
              <td>{{ user.getLastName }}</td>
              <td>{{ user.getEmail }}</td>
              <td><a href="user/edit/{{user.getId}}" class="button button-primary" type="submit">Modifier</a></td>
              <td><a href="user/{{user.getId}}/project" class="button button-primary">Projets</a></td>
            </tr>
{% endfor %}
          </tbody>

        </table>
      </div>
    </div>
{% endif %}

    <a href="/project" class="button button-primary">Liste des projets</a>

  </div>

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
{% endblock %}
